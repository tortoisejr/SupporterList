
@{
    ViewBag.Title = "Index";
}

@{
    if (TempData["msg"] != null)
    {
        <h3 class="alert alert-success">@TempData["msg"]</h3>
    }
}


<h2>Index</h2>


@if (Model.Count != 0)
{
    <table class="table table-bordered">
        <tr>
            <td>Id</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Age</td>
            <td>Nationality</td>
            <td>Suported Club</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FName</td>
                <td>@item.LName</td>
                <td>@item.Age</td>
                <td>@item.Nation</td>
                <td>@item.Club</td>
                <td>
                    <a href="/Supporter/edit/@item.Id" class="btn btn-primary">Edit</a>
                    <a href="/SUpporter/delete/@item.Id" class="btn btn-danger">Delet</a>
                </td>
            </tr>
        }
    </table>
}

else
{
    <h3 class="alert alert-danger">No data found</h3>
}

<a href="/Supporter/insert" class="btn btn-primary">Insert</a>

